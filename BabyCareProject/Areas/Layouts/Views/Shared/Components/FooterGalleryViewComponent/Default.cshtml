@using BabyCareProject.Dtos.GalleryDtos
@model List<ResultGalleryDto>

<div class="footer-item">
    <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Galerimiz</h4>
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="footer-galary-img rounded-circle border border-primary">
                    <img src="@item.ImageUrl" class="img-fluid rounded-circle p-2" style="width: 100%; height: 100px; object-fit: cover;" alt="">
                </div>
            </div>
        }
    </div>
</div>
