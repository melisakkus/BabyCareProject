@model List<ResultInstructorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Eğitmenler</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Profil Resmi</th>
                        <th>Ad Soyad</th>
                        <th>Ünvan</th>
                        <th>İşlemler</th>
                    </tr>

                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
                            <td>@item.FullName</td>
                            <td>@item.Title</td>
                            <td>
                                <a href="/Admin/Instructor/DeleteInstructor/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/Instructor/UpdateInstructor/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />

<div class="text-center">
    <a href="/Admin/Instructor/CreateInstructor" class="btn btn-info">Yeni Eğitmen Ekle</a>
</div>