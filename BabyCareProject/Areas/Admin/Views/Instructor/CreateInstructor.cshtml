@model CreateInstructorDto
@{
    ViewData["Title"] = "CreateInstructor";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="card-header bg-secondary text-white">
                <h3 class="text-center">Yeni Eğitmen Ekle</h3>
            </div>

            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ImageUrl" />
                    <label class="form-label">Resim Yükleyiniz</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <br />

                    <label>Ad</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <br />

                    <label>Soyad</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <br />

                    <label>Ünvan</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <div class="text-center">
                        <button class="btn btn-secondary">Kaydet</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<br />

