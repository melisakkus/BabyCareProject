@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Değerlendirmeler</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Resİm</th>
                        <th>Ad Soyad</th>
                        <th>Meslek</th>
                        <th>Yorum</th>
                        <th>Puan</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
                            <td>@item.ClientName</td>
                            <td>@item.Profession</td>
                            <td>@item.Comment</td>
                            <td>
                                @for(int i=0; i <  item.ReviewStar; i++)
                                {
                                    <i class="fa fa-star text-warning"></i>
                                }
                                @for (int i = 0; i < (5-item.ReviewStar); i++)
                                {
                                    <i class="far fa-star text-warning"></i> 
                                }
                            </td>
                            <td>
                                <a href="/Admin/Testimonial/Delete/@item.Id" class="btn btn-danger">Sil</a> &nbsp; 
                                <a href="/Admin/Testimonial/Update/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />

<div class="text-center">
    <a href="/Admin/Testimonial/Create" class="btn btn-info">Yeni Değerlendirme Ekle</a>
</div>


