@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Değerlendirmeler</h1>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Meslek</th>
        <th>Yorum</th>
        <th>Puan</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /> @item.ClientName</td>
            <td>@item.Profession</td>
            <td>@item.Comment</td>
            <td>@item.ReviewStar</td>            
            <td>
                <a href="/Admin/Testimonial/Delete/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Testimonial/Update/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Testimonial/Create" class="btn btn-info">Yeni Değerlendirme Ekle</a>


