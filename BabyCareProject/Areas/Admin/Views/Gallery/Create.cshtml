@model CreateGalleryDto
@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";

}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="card-header bg-secondary text-white">
                <h3 class="text-center">Yeni Resim Ekle</h3>
            </div>

            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ImageUrl" />
                    <label class="form-label">Resim Yükleyiniz</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <br />
                    <div class="text-center">
                        <button class="btn btn-secondary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />