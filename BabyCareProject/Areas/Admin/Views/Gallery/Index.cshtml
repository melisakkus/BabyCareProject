@model List<ResultGalleryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Galeri</h1>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
            <td>
                <a href="/Admin/Gallery/Delete/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Gallery/Update/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Gallery/Create" class="btn btn-info">Yeni Resim Ekle</a>



