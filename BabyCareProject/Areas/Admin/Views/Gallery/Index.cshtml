@model List<ResultGalleryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Galeri</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Resim</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td><img src="@item.ImageUrl" style="width:300px ; height:auto" /></td>
                            <td>
                                <a href="/Admin/Gallery/Delete/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/Gallery/Update/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="text-center">
                <a href="/Admin/Gallery/Create" class="btn btn-info">Yeni Resim Ekle</a>
                <br />
            </div>
        </div>
    </div>
</div>

<br />


