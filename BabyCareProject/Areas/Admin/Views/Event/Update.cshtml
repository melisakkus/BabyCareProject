@model UpdateEventDto
@{
    ViewData["Title"] = "Update";
}

<h1>Etkinlik Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="Id"/>

    <label>İsim</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <label>Görsel Url</label>
    <textarea type="text" asp-for="ImageUrl" class="form-control" rows="4"></textarea>
    <br />

    <label>Konum</label>
    <input type="text" asp-for="Location" class="form-control" />
    <br />

    <label>Tarih</label>
    <input type="text" asp-for="Date" class="form-control" />
    <br />

    <div class="text-center">
        <button class="btn btn-primary">Güncelle</button>
    </div>

</form>

