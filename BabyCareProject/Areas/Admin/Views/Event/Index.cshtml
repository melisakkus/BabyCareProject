@model List<ResultEventDto>
@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Etkinlikler</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Resim</th>
                        <th>İsim</th>
                        <th>Açıklama</th>
                        <th>Tarih ve Saat</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Date.ToString("dd-MM-yyyy HH:mm")</td>
                            <td>
                                <a href="/Admin/Event/Delete/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/Event/Update/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />

<div class="text-center">
    <a href="/Admin/Event/Create" class="btn btn-info">Yeni Etkinlik Ekle</a>
</div>