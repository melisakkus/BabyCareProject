@model List<ResultInformationDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Genel Bilgiler</h1>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Tel No</th>
        <th>Email</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/Information/Delete/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Information/Update/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Information/Create" class="btn btn-info">Yeni Bilgi Ekle</a>



