@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="card-header bg-secondary text-white">
                <h3 class="text-center">Yeni Ders Ekle</h3>
            </div>

            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

                    <input type="hidden" asp-for="ImageUrl" />
                    <label class="form-label">Resim Yükleyiniz</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <br />

                    <label>Ders Adı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <label>Açıklama</label>
                    <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
                    <br />

                    <label>Fiyat</label>
                    <input type="int" asp-for="Price" class="form-control" />
                    <br />

                    <label>Eğitmen</label>
                    <select asp-for="InstructorName" asp-items="@ViewBag.Instructors" class="form-control">
                        <option disabled selected>Lütfen Eğitmen Seçiniz</option>
                    </select>
                    <br />

                    <div class="text-center">
                        <button class="btn btn-secondary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
