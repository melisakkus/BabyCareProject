@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Dersler</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>İsim</th>
                        <th>Açıklama</th>
                        <th>Ücret</th>
                        <th>Resim</th>
                        <th>Eğitmen</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td>@item.Title</td>
                            <td>@(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)</td>
                            <td>@item.Price</td>
                            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
                            <td>@item.InstructorName</td>
                            <td>
                                <a href="/Admin/Product/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a href="/Admin/Product/CreateProduct" class="btn btn-info">Yeni Ders Ekle</a>
            </div>
        </div>
    </div>
</div>
<br />


