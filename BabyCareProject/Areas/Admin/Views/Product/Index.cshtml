@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Dersler</h3>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Ücret</th>
        <th>Resim</th>
        <th>Eğitmen</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
            <td>@item.InstructorName</td>
            <td>
                <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Product/CreateProduct" class="btn btn-info">Yeni Ders Ekle</a>

