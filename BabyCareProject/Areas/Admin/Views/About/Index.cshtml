@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
}

<h3>Eğitmenler</h3>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/About/CreateAbout" class="btn btn-info">Yeni Hakkımda Alanı Ekle</a>


