@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}


<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Hakkımızda</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>Resİm</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" style="width:100px;height:100px" /></td>
                            <td>@item.Title</td>
                            <td>
                                @(string.IsNullOrEmpty(item.Description) ? "Açıklama Yok" : item.Description.Length <= 50 ? item.Description : item.Description.Substring(0, 50) + "...")
                            </td>
                            <td>
                                <a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<div class="text-center">
     <a href="/Admin/About/CreateAbout" class="btn btn-info">Yeni Hakkımda Alanı Ekle</a>
</div>


