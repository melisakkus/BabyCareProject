@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center">Öne Çıkan Alan</h3>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" style="width:100px;height:100px" /></td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Admin/Banner/Delete/@item.Id" class="btn btn-danger">Sil</a> &nbsp;
                                <a href="/Admin/Banner/Update/@item.Id" class="btn btn-secondary">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />

<div class="text-center">
    <a href="/Admin/Banner/Create" class="btn btn-info">Yeni Öne Çıkan Alan Ekle</a>
</div>


